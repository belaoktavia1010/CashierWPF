<Window x:Class="CRUDB32.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDB32"
        mc:Ignorable="d"
        Title="LoginScreen" Height="300" Width="300" Background="Coral">
    <Border Background="Black" CornerRadius="20" Margin="20"> 
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Email" Foreground="White"/>
            <TextBox Name="txtUserEmail" Background="#545d5a" Foreground="White" FontSize="18" PreviewTextInput="txtUserEmail_PreviewTextInput" TextChanged="txtUserEmail_TextChanged"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d5a" Foreground="White" FontSize="18"/>
            <Button Name="BtnSubmit" Background="#545d5a" Content="Submit" Margin="50 10" Foreground="White" FontSize="10" Click="BtnSubmit_Click"/>
        </StackPanel>
    </Border>

</Window>
